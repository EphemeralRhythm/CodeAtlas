<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:background="@drawable/forgot_password_background">

    <ImageView
        android:id="@+id/dialogHolder"
        android:layout_width="320dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/dialog_holder" />

    <TextView
        android:id="@+id/textViewVerifyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/verify_email"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialogHolder"
        app:layout_constraintTop_toTopOf="@+id/dialogHolder" />

    <ImageButton
        android:id="@+id/send"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:contentDescription="@string/register"
        app:layout_constraintBottom_toBottomOf="@+id/dialogHolder"
        app:layout_constraintEnd_toEndOf="@+id/dialogHolder"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="@+id/dialogHolder"
        app:layout_constraintTop_toBottomOf="@+id/sendVerificationEmailContent"
        app:srcCompat="@drawable/forgot_password_button" />

    <TextView
        android:id="@+id/sendButtonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/send"
        app:layout_constraintEnd_toEndOf="@+id/send"
        app:layout_constraintStart_toStartOf="@+id/send"
        app:layout_constraintTop_toTopOf="@+id/send"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sendVerificationEmailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:text="@string/you_need_to_verify_your_email_to_create_new_posts"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/dialogHolder"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/dialogHolder"
        app:layout_constraintTop_toBottomOf="@+id/textViewVerifyEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>